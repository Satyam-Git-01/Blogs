<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Sign Up</title>
  </head>
  <body>
    <%- include('./partials/navbar') %>

    <div class="container">
      <form method="post" action="/user/signup">
        <div class="mb-3">
          <label for="fullname" class="form-label">Fullname</label>
          <input
            name="fullname"
            type="text"
            class="form-control"
            id="fullname"
            required
          />
        </div>
        <div class="mb-3">
          <label for="email" class="form-label">Email address</label>
          <input
            type="email"
            name="email"
            class="form-control"
            id="email"
            required
          />
        </div>
        <div class="mb-3">
          <label for="password" class="form-label">Password</label>
          <input
            type="password"
            name="password"
            class="form-control"
            id="password"
            required
          />
        </div>
        <button type="submit" class="btn btn-primary">Sign Up</button>
      </form>
    </div>
    <%- include('./partials/scripts') %>
  </body>
</html>
